:root {
  font-family: Inter, system-ui, Avenir, Helvetica, Arial, sans-serif;
  line-height: 1.5;
  font-weight: 400;
  color: #1D2129;
}
body {
  margin: 0;
  min-width: 320px;
  min-height: 100vh;
  background-color: #f5f5f5;
}
#app {
  width: 100%;
  margin: 0 auto;
}
.app {
  min-height: 100vh;
}
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 20px;
  background: #165DFF;
}
.content {
  padding: 20px;
  background: #f5f5f5;
  min-height: calc(-20vh);
}
.welcome-card {
  max-width: 600px;
  margin: 20px auto;
}
.footer {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
  background: #fff;
  border-top: 1px solid #e5e6eb;
}
